{
	"manifest_version": 3,
	"name": "Menu Maker Pedzap",
	"version": "3.0.0",

	"description": "Facilita a criação/alteração de cardápios do Pedzap",

	"author": "Gabriel Coan",
	
	"icons": {
		"128": "images/icon.png",
		"48": "images/icon.png",
		"16": "images/icon.png"
	},

	"action": {
		"default_title":"Menu Maker Pedzap",
		"default_popup":"popup.html",
		"default_icon":"images/icon.png"
	},

	"options_page": "options.html",

	"content_scripts": [
		{
			"matches": [
				"https://www.pedzap.com.br/*"
			],
			"js": [
				"dark-mode.js"
			],
			"run_at": "document_start"
		},
		{
			"matches": [
				"https://www.pedzap.com.br/*"
			],
			"js": [
				"content.js"
			]
		},
		{
			"matches": [
				"https://*/webapp/globais/home*"
			],
			"js": [
				"content-qrcode.js",
				"helpers/qrcode/EasyQRCodeJS-master/dist/easy.qrcode.min.js"
			]
		}
	],

	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"minimum_chrome_version": "92",

	"permissions": [
		"tabs",
		"activeTab",
		"contextMenus",
		"storage",
		"scripting"
	],
	
	"host_permissions": [
		"<all_urls>"
	]
}